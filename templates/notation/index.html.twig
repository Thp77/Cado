{% extends 'base.html.twig' %}

{% block title %}Notation index{% endblock %}

{% block content %}
    <h1>Notation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Stars</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for notation in notations %}
            <tr>
                <td>{{ notation.id }}</td>
                <td>{{ notation.stars }}</td>
                <td>
                    <a href="{{ path('notation_show', {'id': notation.id}) }}">show</a>
                    <a href="{{ path('notation_edit', {'id': notation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('notation_new') }}">Create new</a>
{% endblock %}
